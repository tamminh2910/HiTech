@using HiTech.Model.Entites
@{
    var client = Session["Customer"] as Customer;
}
<ul class="list-inline">
    <li><a href="#"><i class="fa fa-phone"></i></a> <span class="hidden-xs hidden-sm hidden-md">0932112323</span></li>
    @if (client == null)
    {
        <li class="dropdown">
            <a href="#" title="My Account" class="dropdown-toggle"
               data-toggle="dropdown">
                <i class="fa fa-user"></i> <span class="hidden-xs hidden-sm hidden-md">Tài khoản</span> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="@Url.Action("Index","Login")">Đăng nhập</a></li>
                <li><a href="@Url.Action("Register","Client")">Đăng ký</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="dropdown">
            <a href="#" title="Chào, @client.CustomerName" class=" dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-user"></i>
                <span class="hidden-xs hidden-sm hidden-md"> Chào, @client.CustomerName</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="@Url.Action("Index","Client")">Thông tin tài khoản</a></li>
                <li><a href="#" id="logout">Đăng xuất</a></li>

            </ul>
        </li>
    }
   
    <li>
        <a href="@Url.Action("Index","Cart")" title="Shopping Cart">
            <i class="fa fa-shopping-cart"></i>
            <span class="hidden-xs hidden-sm hidden-md">Thông tin giỏ hàng</span>
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index","Cart")" title="Checkout">
            <i class="fa fa-share"></i>
            <span class="hidden-xs hidden-sm hidden-md">Thanh toán</span>
        </a>
    </li>
</ul>

<script type="text/javascript">
    $('#logout').click(function () {
                //Đúng
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Logout", "TrangChu")',
                    contentType: "application/json; charset=utf-8",

                    success: function (result) {
                        $('#top-links').html(result);

                    },
                    error: function () { alert('Fail'); }
                    });

    });

</script>


