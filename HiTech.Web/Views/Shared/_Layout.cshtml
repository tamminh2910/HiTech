<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HiTech Shop</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/CSS/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Swiper/Css/OpenCart.css" rel="stylesheet" />
    <link href="~/Content/Swiper/Css/swiper.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/common.js"></script>
</head>
<body>
    <nav id="top">
        <div class="container">
            <div id="top-links" class="nav pull-right">
                @Html.Partial("_PartialLogin")
            </div>
        </div>
    </nav>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div id="logo">
                        <h1><a href="@Url.Action("Index","TrangChu")">HiTech Shop</a></h1>
                    </div>
                </div>
                <div class="col-sm-5">
                    @Html.Partial("_PartialSearch")
                </div>
                <div class="col-sm-3" id="giohang">
                    @Html.Partial("_PartialCart")
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        @Html.Partial("_PartialMenuClient")
    </div>
    <div id="common-home" class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="container">

            <p>Địa chỉ cửa hàng: 12 đường Cách Mạng Tháng Tám, Phường 3, Quận 1</p>
            <p>Số điện thoại: 033212123</p>
            <hr />
        </div>
    </footer>
    <script src="~/Areas/Admin/Script/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/MicrosoftAjax.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("AddToCart", required: false)
</body>
</html>
@Html.Raw(TempData["ThanhToan"])